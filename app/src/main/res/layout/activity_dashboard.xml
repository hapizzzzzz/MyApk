<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dashboard">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgProfile"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/ic_profil"
        android:layout_width="50dp"
        android:layout_height="50dp"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/imgProfile"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="#E91E63"/>

    <ImageView
        android:id="@+id/menara"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:src="@drawable/menara_efiel"
        android:layout_below="@+id/imgProfile"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="80dp"
        android:background="#ff0000"
        android:padding="1dp"/>

    <ImageView
        android:id="@+id/kota2"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:src="@drawable/kota"
        android:layout_below="@+id/menara"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="80dp"
        android:background="#ff0000"
        android:padding="1dp"/>

    <ImageView
        android:id="@+id/menara2"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_below="@+id/kota"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/kota2"
        android:background="#ff0000"
        android:padding="1dp"
        android:src="@drawable/menara_efiel" />


    <ImageView
        android:id="@+id/kota"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_below="@+id/imgProfile"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="180dp"
        android:layout_toRightOf="@+id/menara"
        android:background="#ff0000"
        android:padding="1dp"
        android:src="@drawable/kota" />



    <TextView
        android:id="@+id/tvUsername"
        android:layout_width="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_height="30dp"
        android:layout_marginTop="18dp"
        android:layout_toEndOf="@id/imgProfile"
        android:text="Hello World !!"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/nim"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@id/kota2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:layout_toEndOf="@id/imgProfile"
        android:text="5190311089_Hafizh Fahrullah"
        android:textSize="20dp" />

</RelativeLayout>